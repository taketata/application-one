<% if flash[:notice] %>
  <p class="sacces"><%= flash[:notice] %></p>
<% end %>

<div class="index-box">
  <h1 class="index-header">Books</h1>

  <table>
    <thead>
      <tr>
        <th>title</th>

        <th>body</th>

        <th colspan="3"></th>
      </tr>
    </thead>


    <% @books.each do |book| %>



      <tbody>
        <tr>
          <td><%= book.title %></td>

          <td><%= book.body %></td>


          <td><%= link_to "Show",book_path(book.id) %></td>

          <td><%= link_to "Edit",edit_book_path(book.id) %></td>

          <td><%= link_to "Destroy",book_path(book.id),method: :delete,data: {confirm: "Are you sureï¼Ÿ"} %></td>
        </tr>
      </tbody>

     <% end %>

    </table>


</div>

<div class="new-box">
  <h1>New book</h1>

  <% if @book.errors.any? %>
    <div class="error-message">
      <p class="error-title"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li class="error-body"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model:@book do |f| %>
    <h4 clas="new-title">title</h4>
    <%= f.text_field:title %>

    <h4 class="new-body">body</h4>
    <%= f.text_area:body %>

    <div class="new-link"><%= f.submit 'Create Book' %></div>
  <% end %>
</div>
